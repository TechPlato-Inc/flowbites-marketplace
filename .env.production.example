# =============================================================================
# Flowbites Marketplace - Production Environment Variables
# =============================================================================
# Copy this file to .env.production and fill in your values:
#   cp .env.production.example .env.production
# =============================================================================

# ---------------------------------------------------------------------------
# Domain & URLs
# ---------------------------------------------------------------------------
DOMAIN=yourdomain.com
CLIENT_URL=https://yourdomain.com

# ---------------------------------------------------------------------------
# MongoDB
# ---------------------------------------------------------------------------
MONGO_ROOT_USERNAME=flowbites_admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD

# ---------------------------------------------------------------------------
# JWT Secrets (generate with: openssl rand -hex 64)
# ---------------------------------------------------------------------------
JWT_ACCESS_SECRET=CHANGE_THIS_generate_with_openssl_rand_hex_64
JWT_REFRESH_SECRET=CHANGE_THIS_generate_with_openssl_rand_hex_64
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ---------------------------------------------------------------------------
# Stripe (get from https://dashboard.stripe.com/apikeys)
# ---------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PLATFORM_FEE_PERCENT=30

# ---------------------------------------------------------------------------
# File Upload
# ---------------------------------------------------------------------------
MAX_FILE_SIZE=104857600

# ---------------------------------------------------------------------------
# Rate Limiting
# ---------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ---------------------------------------------------------------------------
# SSL / Let's Encrypt
# ---------------------------------------------------------------------------
LETSENCRYPT_EMAIL=your-email@example.com
