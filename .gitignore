# Environment Variables (secrets)
# ---------------------------------------------------------------------------
.env
.env.local
.env.production
.env.development.local
.env.test.local
.env.production.local
client/.env
server/.env

# Keep example env files
!.env.example
!.env.production.example
!client/.env.example
!server/.env.example

