# Public API endpoint used by client-side requests
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# Base origin used by Next.js rewrites in next.config.js
NEXT_PUBLIC_API_BASE_URL=http://localhost:5000

# Public uploads origin for image/file URLs
NEXT_PUBLIC_UPLOADS_URL=http://localhost:5000/uploads

# Site URL used for metadata/canonical URLs
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Stripe publishable key (safe for browser)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# Cloudinary cloud name (for image rendering helpers)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name

# Optional server-side internal API URL (SSR/server actions)
API_INTERNAL_URL=http://server:5000/api
